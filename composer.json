{
  "name": "pcshiraz/ecommerce",
  "description": "E-Commerce,Accounting,CRM and more, It is all in one for Persian users.",
  "keywords": [
    "platform",
    "laravel",
    "payment",
    "gateway",
    "invoice",
    "money"
  ],
  "license": "MIT",
  "type": "project",
  "require": {
    "php": ">=7.1.3",
    "axdlee/laravel-config-writer": "1.0.2",
    "fideloper/proxy": "^4.0",
    "guzzlehttp/guzzle": "^6.3",
    "hardevine/shoppingcart": "^2.5",
    "kyslik/column-sortable": "^5.7",
    "laracasts/flash": "^3.0",
    "laravel/framework": "5.7.*",
    "maatwebsite/excel": "^3.1",
    "mews/captcha": "^2.2",
    "morilog/jalali": "^3.0",
    "nwidart/laravel-modules": "^3.3",
    "parsisolution/gateway": "^1.3",
    "rtconner/laravel-tagging": "^3.0",
    "sofa/eloquence": "^5.6",
    "spatie/laravel-permission": "^2.23",
    "thomaswelton/laravel-gravatar": "^1.1",
    "tucker-eric/eloquentfilter": "^1.3"
  },
  "require-dev": {
    "barryvdh/laravel-debugbar": "^3.2",
    "beyondcode/laravel-dump-server": "^1.0",
    "filp/whoops": "^2.0",
    "fzaninotto/faker": "^1.4",
    "mockery/mockery": "^1.0",
    "nunomaduro/collision": "^2.0",
    "phpunit/phpunit": "^7.0"
  },
  "autoload": {
    "classmap": [
      "database/seeds",
      "database/factories"
    ],
    "psr-4": {
      "App\\": "app/",
      "Modules\\": "modules/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "dont-discover": [
      ]
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate"
    ],
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
